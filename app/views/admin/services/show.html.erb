<div class="card">
  <div class="card-header">
    <h2><%= @service.title %></h2>
  </div>
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3">Title:</dt>
      <dd class="col-sm-9"><%= @service.title %></dd>

      <dt class="col-sm-3">Position:</dt>
      <dd class="col-sm-9"><%= @service.position %></dd>

      <dt class="col-sm-3">Description:</dt>
      <dd class="col-sm-9"><%= @service.description %></dd>

      <% if @service.icon.attached? %>
        <dt class="col-sm-3">Icon:</dt>
        <dd class="col-sm-9">
          <%= image_tag @service.icon, style: 'max-width: 100px; max-height: 100px;' %>
        </dd>
      <% end %>
    </dl>
  </div>
</div>

<div class="mt-3">
  <%= link_to 'Edit', edit_admin_service_path(@service), class: 'btn btn-warning' %>
  <%= link_to 'Back', admin_services_path, class: 'btn btn-secondary' %>
</div>
