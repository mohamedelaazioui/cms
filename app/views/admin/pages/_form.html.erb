<%= form_with(model: [:admin, page], local: true, class: 'needs-validation') do |form| %>
  <% if page.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h4>
      <ul>
        <% page.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :slug, class: 'form-label' %>
    <%= form.text_field :slug, class: 'form-control' %>
    <div class="form-text">Leave blank to auto-generate from title</div>
  </div>

  <div class="mb-3">
    <%= form.label :locale, class: 'form-label' %>
    <%= form.select :locale, options_for_select([['English', 'en'], ['Japanese', 'ja']], page.locale), {}, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <div class="form-check">
      <%= form.check_box :published, class: 'form-check-input' %>
      <%= form.label :published, class: 'form-check-label' %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :content, class: 'form-label' %>
    <%= form.rich_text_area :content, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
