<div class="card">
  <div class="card-header">
    <h2><%= @social_link.name %></h2>
  </div>
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3">Name:</dt>
      <dd class="col-sm-9"><%= @social_link.name %></dd>

      <dt class="col-sm-3">URL:</dt>
      <dd class="col-sm-9">
        <%= link_to @social_link.url, @social_link.url, target: '_blank', rel: 'noopener' %>
      </dd>
    </dl>
  </div>
</div>

<div class="mt-3">
  <%= link_to 'Edit', edit_admin_social_link_path(@social_link), class: 'btn btn-warning' %>
  <%= link_to 'Back', admin_social_links_path, class: 'btn btn-secondary' %>
</div>
