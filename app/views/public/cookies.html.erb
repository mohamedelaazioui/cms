<div class="container my-5">
  <div class="row">
    <!-- Sidebar Navigation -->
    <div class="col-lg-3 mb-4">
      <nav class="sticky-top" style="top: 100px;">
        <h5 class="mb-3"><%= t('cookies_policy.title') %></h5>
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link" href="#what_are_cookies"><%= t('cookies_policy.sections.what_are_cookies.title') %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#cookies_we_use"><%= t('cookies_policy.sections.cookies_we_use.title') %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#purpose"><%= t('cookies_policy.sections.purpose.title') %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#managing_cookies"><%= t('cookies_policy.sections.managing_cookies.title') %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#third_party"><%= t('cookies_policy.sections.third_party.title') %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#cookie_consent"><%= t('cookies_policy.sections.cookie_consent.title') %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#updates"><%= t('cookies_policy.sections.updates.title') %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#contact"><%= t('cookies_policy.sections.contact.title') %></a>
          </li>
        </ul>
      </nav>
    </div>

    <!-- Main Content -->
    <div class="col-lg-9">
      <h1 class="mb-4"><%= t('cookies_policy.title') %></h1>
      <p class="text-muted mb-5"><%= t('cookies_policy.last_updated') %></p>

      <!-- Section 1: What Are Cookies -->
      <section id="what_are_cookies" class="mb-5">
        <h2><%= t('cookies_policy.sections.what_are_cookies.title') %></h2>
        <p><%= t('cookies_policy.sections.what_are_cookies.content') %></p>
      </section>

      <!-- Section 2: Cookies We Use -->
      <section id="cookies_we_use" class="mb-5">
        <h2><%= t('cookies_policy.sections.cookies_we_use.title') %></h2>
        
        <h3 class="h5 mt-4"><%= t('cookies_policy.sections.cookies_we_use.essential.title') %></h3>
        <p><%= t('cookies_policy.sections.cookies_we_use.essential.content') %></p>
        <ul>
          <% t('cookies_policy.sections.cookies_we_use.essential.items').each do |item| %>
            <li><%= item %></li>
          <% end %>
        </ul>

        <h3 class="h5 mt-4"><%= t('cookies_policy.sections.cookies_we_use.authentication.title') %></h3>
        <p><%= t('cookies_policy.sections.cookies_we_use.authentication.content') %></p>
        <ul>
          <% t('cookies_policy.sections.cookies_we_use.authentication.items').each do |item| %>
            <li><%= item %></li>
          <% end %>
        </ul>

        <h3 class="h5 mt-4"><%= t('cookies_policy.sections.cookies_we_use.analytics.title') %></h3>
        <p><%= t('cookies_policy.sections.cookies_we_use.analytics.content') %></p>
        <ul>
          <% t('cookies_policy.sections.cookies_we_use.analytics.items').each do |item| %>
            <li><%= item %></li>
          <% end %>
        </ul>

        <h3 class="h5 mt-4"><%= t('cookies_policy.sections.cookies_we_use.marketing.title') %></h3>
        <p><%= t('cookies_policy.sections.cookies_we_use.marketing.content') %></p>
        <ul>
          <% t('cookies_policy.sections.cookies_we_use.marketing.items').each do |item| %>
            <li><%= item %></li>
          <% end %>
        </ul>
      </section>

      <!-- Section 3: Purpose -->
      <section id="purpose" class="mb-5">
        <h2><%= t('cookies_policy.sections.purpose.title') %></h2>
        <p><%= t('cookies_policy.sections.purpose.content') %></p>
        <ul>
          <% t('cookies_policy.sections.purpose.items').each do |item| %>
            <li><%= item %></li>
          <% end %>
        </ul>
      </section>

      <!-- Section 4: Managing Cookies -->
      <section id="managing_cookies" class="mb-5">
        <h2><%= t('cookies_policy.sections.managing_cookies.title') %></h2>
        <p><%= t('cookies_policy.sections.managing_cookies.content') %></p>

        <h3 class="h5 mt-4"><%= t('cookies_policy.sections.managing_cookies.browser_settings.title') %></h3>
        <p><%= t('cookies_policy.sections.managing_cookies.browser_settings.content') %></p>

        <h3 class="h5 mt-4"><%= t('cookies_policy.sections.managing_cookies.opt_out.title') %></h3>
        <p><%= t('cookies_policy.sections.managing_cookies.opt_out.content') %></p>
        <ul>
          <% t('cookies_policy.sections.managing_cookies.opt_out.items').each do |item| %>
            <li><%= item %></li>
          <% end %>
        </ul>
      </section>

      <!-- Section 5: Third Party -->
      <section id="third_party" class="mb-5">
        <h2><%= t('cookies_policy.sections.third_party.title') %></h2>
        <p><%= t('cookies_policy.sections.third_party.content') %></p>
      </section>

      <!-- Section 6: Cookie Consent -->
      <section id="cookie_consent" class="mb-5">
        <h2><%= t('cookies_policy.sections.cookie_consent.title') %></h2>
        <p><%= t('cookies_policy.sections.cookie_consent.content') %></p>
      </section>

      <!-- Section 7: Updates -->
      <section id="updates" class="mb-5">
        <h2><%= t('cookies_policy.sections.updates.title') %></h2>
        <p><%= t('cookies_policy.sections.updates.content') %></p>
      </section>

      <!-- Section 8: Contact -->
      <section id="contact" class="mb-5">
        <h2><%= t('cookies_policy.sections.contact.title') %></h2>
        <p><%= t('cookies_policy.sections.contact.content') %></p>
        <div class="mt-3">
          <%= link_to t('navigation.contact'), new_contact_message_path, class: 'btn btn-primary' %>
        </div>
      </section>
    </div>
  </div>
</div>
